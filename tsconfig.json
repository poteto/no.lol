{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "typeRoots": ["node_modules/@types", "./src/typings"],
    "jsx": "react",
    "downlevelIteration": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"]
}
